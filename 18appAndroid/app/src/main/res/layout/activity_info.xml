                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credito"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="174,00€"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

